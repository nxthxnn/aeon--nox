<includes>
  <include name="Banners">
    <control type="group">
      <visible>Control.IsVisible(508)</visible>
      <control type="image">
        <posx>40</posx>
        <posy>537</posy>
        <width>33</width>
        <height>37</height>
        <texture>views/multiplex_arrow2.png</texture>
        <include>Animation_HideMultiplex</include>
        <visible>[IntegerGreaterThan(Container(508).NumItems,10) + !system.getbool(filelists.showparentdiritems)] | [IntegerGreaterThan(Container(508).NumItems,9) + system.getbool(filelists.showparentdiritems)]</visible>
      </control>
      <control type="image">
        <posx>1207</posx>
        <posy>537</posy>
        <width>33</width>
        <height>37</height>
        <texture flipx="true">views/multiplex_arrow2.png</texture>
        <include>Animation_HideMultiplex</include>
        <visible>[IntegerGreaterThan(Container(508).NumItems,10) + !system.getbool(filelists.showparentdiritems)] | [IntegerGreaterThan(Container(508).NumItems,9) + system.getbool(filelists.showparentdiritems)]</visible>
      </control>
      <control type="panel" id="508">
        <posx>78</posx>
        <posy>415</posy>
        <width>1125</width>
        <height>245</height>
        <onleft>508</onleft>
        <onright>508</onright>
        <onup>SetFocus(9000)</onup>
        <ondown>62</ondown>
        <orientation>horizontal</orientation>
        <viewtype label="$LOCALIZE[31236]">wide icon</viewtype>
        <pagecontrol>62</pagecontrol>
        <scrolltime>200</scrolltime>
        <focusposition>2</focusposition>
        <preloaditems>2</preloaditems>
        <visible>Container.Content(TVShows)</visible>
        <itemlayout width="375" height="80">
          <control type="image">
            <posx>5</posx>
            <posy>5</posy>
            <width>365</width>
            <height>70</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture background="true" diffuse="thumbs/banner_wall_mask.png">DefaultBanner.png</texture>
            <animation effect="fade" start="70" end="70" time="0" condition="true">Conditional</animation>
            <info>ListItem.Thumb</info>
            <visible>!Skin.HasSetting(TVShowsUsePosters)</visible>
          </control>
          <control type="image">
            <posx>5</posx>
            <posy>5</posy>
            <width>365</width>
            <height>70</height>
            <aspectratio scalediffuse="false">stretch</aspectratio>
            <texture background="true" diffuse="thumbs/banner_wall_mask.png">DefaultBanner.png</texture>
            <info>ListItem.Path,,banner.jpg</info>
            <animation effect="fade" start="70" end="70" time="0" condition="true">Conditional</animation>
            <visible>Skin.HasSetting(TVShowsUsePosters)</visible>
          </control>
          <control type="image">
            <posx>330</posx>
            <posy>5</posy>
            <width>40</width>
            <height>40</height>
            <texture>thumbs/OverlayWatched.png</texture>
            <visible>!IsEmpty(ListItem.Overlay)</visible>
            <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+!Skin.HasSetting(newstatus)</visible>
          </control>
          <control type="image">
            <posx>331</posx>
            <posy>4</posy>
            <width>40</width>
            <height>40</height>
            <texture>thumbs/UnWatched2.png</texture>
            <visible>!IsEmpty(ListItem.Overlay)</visible>
            <visible>!StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(newstatus)</visible>
          </control>
        </itemlayout>
        <focusedlayout width="375" height="80">
          <control type="image">
            <posx>5</posx>
            <posy>5</posy>
            <width>365</width>
            <height>70</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture background="true" diffuse="thumbs/banner_wall_mask.png">DefaultBanner.png</texture>
            <info>ListItem.Thumb</info>
            <visible>!Skin.HasSetting(TVShowsUsePosters)</visible>
          </control>
          <control type="image">
            <posx>5</posx>
            <posy>5</posy>
            <width>365</width>
            <height>70</height>
            <aspectratio scalediffuse="false">stretch</aspectratio>
            <texture background="true" diffuse="thumbs/banner_wall_mask.png">DefaultBanner.png</texture>
            <info>ListItem.Path,,banner.jpg</info>
            <visible>Skin.HasSetting(TVShowsUsePosters)</visible>
          </control>
          <control type="image">
            <posx>330</posx>
            <posy>5</posy>
            <width>40</width>
            <height>40</height>
            <texture>thumbs/OverlayWatched.png</texture>
            <visible>!IsEmpty(ListItem.Overlay)</visible>
            <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+!Skin.HasSetting(newstatus)</visible>
          </control>
          <control type="image">
            <posx>331</posx>
            <posy>4</posy>
            <width>40</width>
            <height>40</height>
            <texture>thumbs/UnWatched2.png</texture>
            <visible>!IsEmpty(ListItem.Overlay)</visible>
            <visible>!StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(newstatus)</visible>
          </control>
         <control type="image">
        <posx>-2</posx>
        <posy>-2</posy>
        <width>379</width>
        <height>83</height>
        <aspectratio>stretch</aspectratio>
        <texture background="true">thumbs/banner_shadow.png</texture>
      </control>
        </focusedlayout>
      </control>
