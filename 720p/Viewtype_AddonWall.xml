<includes>
  <include name="AddonWall">
    <control type="group">
      <visible>Control.IsVisible(512)</visible>
      <control type="image">
        <width>1280</width>
        <height>720</height>
        <texture>common/black.png</texture>
        <colordiffuse>AAffffff</colordiffuse>
        <include>Animation_WindowFade200</include>
      </control>
      <control type="panel" id="512">
        <posx>35</posx>
        <posy>100</posy>
        <width>760</width>
        <height>570</height>
        <onleft>60</onleft>
        <onright>9000</onright>
        <onup>512</onup>
        <ondown>512</ondown>
        <preloaditems>4</preloaditems>
        <scrolltime>150</scrolltime>
        <visible>!Container.Content(movies)+!Container.Content(tvshows)+!Container.Content(seasons)</visible>
        <viewtype label="AddonWall">icon</viewtype>
        <pagecontrol>60</pagecontrol>
        <itemlayout height="190" width="190">
          <control type="largeimage">
            <posx>8</posx>
            <posy>7</posy>
            <width>164</width>
            <height>164</height>
            <aspectratio scalediffuse="false">stretch</aspectratio>
            <texture background="true" diffuse="wall/wall_mask.png">$INFO[ListItem.Icon]</texture>
          </control>
          <control type="largeimage">
            <posx>8</posx>
            <posy>7</posy>
            <width>164</width>
            <height>164</height>
            <aspectratio scalediffuse="false">stretch</aspectratio>
            <texture background="true" diffuse="wall/wall_mask.png">common/blank.png</texture>
            <bordertexture border="-4">wall/wall_nfborder.png</bordertexture>
          </control>
        </itemlayout>
        <focusedlayout height="190" width="190">
          <control type="group">
            <animation effect="zoom" center="90,89" start="100" end="120" time="400" easing="out" tween="back" reversible="false">Focus</animation>
            <control type="largeimage">
              <posx>8</posx>
              <posy>7</posy>
              <width>164</width>
              <height>164</height>
              <aspectratio scalediffuse="false" align="center">stretch</aspectratio>
              <texture background="true" diffuse="wall/wall_mask.png">$INFO[ListItem.Icon]</texture>
            </control>
            <control type="largeimage">
              <posx>8</posx>
              <posy>7</posy>
              <width>164</width>
              <height>164</height>
              <aspectratio scalediffuse="false">stretch</aspectratio>
              <texture background="true" diffuse="wall/wall_mask.png">common/blank.png</texture>
              <bordertexture border="-10">wall/wall_fborder.png</bordertexture>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>-33</posx>
        <posy>92</posy>
        <width>65</width>
        <height>548</height>
        <visible allowhiddenfocus="true">Control.IsVisible(512)</visible>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
        <textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
        <orientation>vertical</orientation>
        <showonepage>false</showonepage>
        <pulseonselect>yes</pulseonselect>
        <onleft>9000</onleft>
        <onright>512</onright>
      </control>
      <control type="label">
        <posx>850</posx>
        <posy>115</posy>
        <height>13</height>
        <width>400</width>
        <font>Font_Bold20</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
        <label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
      </control>
      <control type="group">
        <visible>!Container.Content(movies)+!Container.Content(tvshows)+!Container.Content(seasons)+!Container.Content(episodes)</visible>
        <control type="label">
          <posx>850</posx>
          <posy>145</posy>
          <height>13</height>
          <width>400</width>
          <font>Font_Info</font>
          <textcolor>abFFFFFF</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$LOCALIZE[24051]</label>
        </control>
        <control type="label">
          <posx>950</posx>
          <posy>145</posy>
          <height>13</height>
          <width>400</width>
          <font>Font_Info</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$INFO[ListItem.Property(Addon.Version)]</label>
        </control>
        <control type="label">
          <posx>850</posx>
          <posy>165</posy>
          <height>13</height>
          <width>400</width>
          <font>Font_Info</font>
          <textcolor>abFFFFFF</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$LOCALIZE[21863]:</label>
        </control>
        <control type="label">
          <posx>950</posx>
          <posy>165</posy>
          <height>13</height>
          <width>400</width>
          <font>Font_Info</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$INFO[ListItem.Property(Addon.Creator)]</label>
        </control>
        <control type="label">
          <posx>850</posx>
          <posy>185</posy>
          <height>13</height>
          <width>400</width>
          <font>Font_Info</font>
          <textcolor>abFFFFFF</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$LOCALIZE[126]:</label>
          <visible>Window.IsActive(addonbrowser)</visible>
        </control>
        <control type="label">
          <posx>950</posx>
          <posy>185</posy>
          <height>13</height>
          <width>400</width>
          <font>Font_Info</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$INFO[ListItem.Property(Addon.Status)]</label>
          <visible>Window.IsActive(addonbrowser)</visible>
        </control>
        <control type="textbox">
          <posx>850</posx>
          <posy>215</posy>
          <width>350</width>
          <height>300</height>
          <font>Font_Reg18</font>
          <label fallback="312577">$INFO[ListItem.Property(Addon.Description)]</label>
          <textcolor>d0FFFFFF</textcolor>
          <shadowcolor>black</shadowcolor>
          <autoscroll delay="8000" time="2000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
          <visible>!Player.HasVideo</visible>
          <animation effect="slide" tween="cubic" easing="inout" time="1300" start="0,0" end="0,-25" delay="1000" condition="!Window.IsActive(addonbrowser)">Conditional</animation>
        </control>
        <control type="textbox">
          <posx>850</posx>
          <posy>215</posy>
          <width>350</width>
          <height>240</height>
          <font>Font_Reg18</font>
          <label fallback="312577">$INFO[ListItem.Property(Addon.Description)]</label>
          <textcolor>d0FFFFFF</textcolor>
          <shadowcolor>black</shadowcolor>
          <autoscroll delay="8000" time="2000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
          <visible>Player.HasVideo</visible>
          <animation effect="slide" tween="cubic" easing="inout" time="1300" start="0,0" end="0,-25" delay="1000" condition="!Window.IsActive(addonbrowser)">Conditional</animation>
        </control>
      </control>
      <control type="group">
        <posx>820</posx>
        <posy>-35</posy>
        <visible>Player.Hasvideo</visible>
        <animation effect="slide" tween="cubic" easing="inout" time="1300" start="400,0" end="0,0" delay="1000">Visible</animation>
        <animation effect="slide" tween="cubic" easing="inout" time="1300" start="400,0" end="0,0" delay="1000">WindowOpen</animation>
        <include>Animation_OpenCloseZoom</include>
        <include>Animation_CommonFade</include>
        <control type="image">
          <description>gradient</description>
          <posx>20</posx>
          <posy>456</posy>
          <width>420</width>
          <height>245</height>
          <texture>home/nowplaying/OverlayDialogBackground.png</texture>
        </control>
        <control type="image">
          <posx>35</posx>
          <posy>471</posy>
          <width>390</width>
          <height>215</height>
          <texture>common/black.png</texture>
        </control>
        <control type="videowindow">
          <posx>35</posx>
          <posy>471</posy>
          <width>390</width>
          <height>215</height>
        </control>
      </control>
    </control>
  </include>
</includes>