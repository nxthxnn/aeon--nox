<includes>
  <!-- Common -->

  <include name="Animation_CommonFade">
    <animation effect="fade" time="200">Visible</animation>
    <animation effect="fade" time="200">Hidden</animation>
    <animation effect="fade" time="500">WindowOpen</animation>
    <animation effect="fade" time="200">WindowClose</animation>
  </include>
  <include name="Animation_VisibleChange200">
    <animation effect="fade" time="200">Visible</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="Animation_VisibleChange400">
    <animation effect="fade" time="400">Visible</animation>
    <animation effect="fade" time="400">Hidden</animation>
  </include>
  <include name="Animation_WindowFade200">
    <animation effect="fade" time="200">WindowOpen</animation>
    <animation effect="fade" time="200">WindowClose</animation>
  </include>
  <include name="Animation_SubMenu">
    <animation type="Visible" reversible="false">
      <effect type="slide" start="0,-40" end="0,0" time="400" tween="cubic" easing="inout"/>
      <effect type="fade" start="0" end="100" time="300"/>
    </animation>
    <animation type="Hidden" reversible="false">
      <effect type="slide" start="0,0" end="0,-40" time="400" tween="cubic" easing="inout"/>
      <effect type="fade" start="100" end="0" time="400"/>
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="fade" start="100" end="0" time="300"/>
      <effect type="zoom" start="100" end="130" center="640,360" time="300" tween="cubic" easing="in"/>
    </animation>
  </include>
  <include name="Animation_OpenCloseZoom">
    <animation type="WindowOpen" reversible="false" condition="Window.Previous(Startup)">
      <effect type="zoom" start="180" end="100" center="640,-60" time="2500" tween="cubic" easing="out"/>
      <effect type="fade" start="0" end="100" time="2000"/>
    </animation>
    <animation type="WindowOpen" reversible="false" condition="!Window.Previous(Startup)">
      <effect type="zoom" start="150" end="100" center="640,360" time="900" tween="cubic" easing="out"/>
      <effect type="fade" start="0" end="100" time="900"/>
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="fade" start="100" end="0" time="300"/>
      <effect type="zoom" start="100" end="130" center="640,360" time="300" tween="cubic" easing="in"/>
    </animation>
  </include>
  <include name="Animation_DialogPopup">
    <animation type="WindowOpen" reversible="false">
      <effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
      <effect type="fade" delay="200" start="0" end="100" time="300" />
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
      <effect type="fade" start="100" end="0" time="300" />
    </animation>
    <animation type="Visible" reversible="false">
      <effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
      <effect type="fade" delay="200" start="0" end="100" time="300" />
    </animation>
    <animation type="Hidden" reversible="false">
      <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
      <effect type="fade" start="100" end="0" time="300" />
    </animation>
    <animation type="Focus" reversible="false">
      <effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
      <effect type="fade" delay="200" start="0" end="100" time="300" />
    </animation>
  </include>
  <include name="Animation_MediaMenuPopup">
    <animation type="WindowOpen" reversible="false">
      <effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
      <effect type="fade" delay="200" start="0" end="100" time="300" />
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
      <effect type="fade" start="100" end="0" time="300" />
    </animation>
    <animation type="Visible" reversible="false">
      <effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
      <effect type="fade" delay="200" start="0" end="100" time="300" />
    </animation>
    <animation type="Hidden" reversible="false">
      <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
      <effect type="fade" start="100" end="0" time="300" />
    </animation>
    <animation type="Conditional" reversible="false" condition="ControlGroup(9000).HasFocus">
      <effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
      <effect type="fade" delay="200" start="0" end="100" time="300" />
    </animation>
  </include>
  <include name="Animation_HideMultiplex">
    <animation type="Conditional" reversible="true" condition="Control.HasFocus(109)">
      <effect type="slide" start="0,0" end="0,350" time="400" tween="cubic" easing="in" />
    </animation>
  </include>
  <include name="Animation_HideMusic">
    <animation type="Conditional" reversible="true" condition="Control.HasFocus(110)">
      <effect type="slide" start="0,0" end="0,350" time="400" tween="cubic" easing="in" />
    </animation>
  </include>
  <include name="Animation_DialogZoom">
    <animation type="WindowOpen" reversible="false">
      <effect type="zoom" start="150" end="100" center="640,360" time="900" tween="cubic" easing="out"/>
      <effect type="fade" start="0" end="100" time="900"/>
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="fade" start="100" end="0" time="300"/>
      <effect type="zoom" start="100" end="130" center="640,360" time="300" tween="cubic" easing="in"/>
    </animation>
  </include>
  <include name="Animation_WidgetZoom">
    <animation type="WindowOpen" reversible="false">
      <effect type="zoom" start="150" end="100" center="640,360" time="900" tween="cubic" easing="out" delay="500"/>
    </animation>
    <animation type="WindowClose" reversible="false">
      <effect type="zoom" start="100" end="130" center="640,360" time="500" tween="cubic" easing="in"/>
    </animation>
    <animation type="Visible" reversible="false">
      <effect type="zoom" start="150" end="100" center="640,360" time="800" tween="cubic" easing="inout" delay="500"/>
    </animation>
    <animation type="Hidden" reversible="false">
      <effect type="zoom" start="100" end="130" center="640,360" time="200" tween="cubic" easing="in"/>
    </animation>
  </include>
  <include name="Animation_ListSlideRight">
    <animation effect="slide" time="700" start="800,0" end="0,0" tween="cubic" easing="out">WindowOpen</animation>
    <animation effect="slide" time="700" start="0,0" end="800,0" tween="cubic" easing="out">WindowClose</animation>
    <animation effect="slide" time="700" start="800,0" end="0,0" tween="cubic" easing="out">VisibleChange</animation>
    <animation effect="fade" time="200" start="100" end="0">Hidden</animation>
  </include>
  <include name="Animation_ListSlideLeft">
    <animation effect="slide" time="700" start="-800,0" end="0,0" tween="cubic" easing="out">WindowOpen</animation>
    <animation effect="slide" time="700" start="0,0" end="-800,0" tween="cubic" easing="out">WindowClose</animation>
    <animation effect="slide" time="700" start="-800,0" end="0,0" tween="cubic" easing="out">VisibleChange</animation>
    <animation effect="fade" time="200" start="100" end="0">Hidden</animation>
  </include>
</includes>