<includes>
  <include name="Neon_Topbar">
    <control type="image">
      <posx>-500</posx>
      <posy>15</posy>
      <width>1780</width>
      <height>27</height>
      <texture>common/topbar.png</texture>
      <include>Animation_CommonFade</include>
      <animation effect="slide" start="0,0" end="500,0" time="2000" pulse="true" tween="cubic" easing="inout" condition="true">Conditional</animation>
    </control>
  </include>
  <include name="Neon_Floor">
    <control type="image">
      <posx>-400</posx>
      <posy>569</posy>
      <width>1780</width>
      <height>27</height>
      <texture>common/topbar.png</texture>
      <include>Animation_CommonFade</include>
      <include>Animation_HideShowcase</include>
      <include>Animation_HideMultiplex</include>
      <animation effect="slide" time="100" start="0,21" end="0,21" tween="cubic" easing="out" condition="Control.IsVisible(50)|Control.IsVisible(505)">Conditional</animation>
      <animation effect="slide" time="100" start="0,21" end="0,-79" tween="cubic" easing="out" condition="Control.IsVisible(511)">Conditional</animation>
      <animation effect="slide" start="0,0" end="400,0" time="2000" pulse="true" tween="cubic" easing="inout" condition="true">Conditional</animation>
    </control>
  </include>
  <include name="Neon_Home">
    <control type="image">
      <posx>-400</posx>
      <posy>329</posy>
      <width>1780</width>
      <height>27</height>
      <texture>common/topbar.png</texture>
      <include>Animation_CommonFade</include>
      <animation effect="slide" start="0,0" end="400,0" time="2000" pulse="true" tween="cubic" easing="inout" condition="true">Conditional</animation>
      <visible>Skin.HasSetting(classichome)|Skin.HasSetting(glasshome)</visible>
    </control>
    <control type="image">
      <posx>-400</posx>
      <posy>393</posy>
      <width>1780</width>
      <height>27</height>
      <texture>common/topbar.png</texture>
      <include>Animation_CommonFade</include>
      <animation effect="slide" start="0,0" end="400,0" time="2000" pulse="true" tween="cubic" easing="inout" condition="true">Conditional</animation>
      <visible>Skin.HasSetting(classichome)|Skin.HasSetting(glasshome)</visible>
    </control>
  </include>
</includes>