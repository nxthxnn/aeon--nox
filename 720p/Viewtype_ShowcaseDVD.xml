<includes>
  <include name="ShowcaseDVD">
    <control type="group">
      <visible>Control.IsVisible(504)</visible>
      <posx>0</posx>
      <posy>0</posy>
      <include>Furniture_Showcase</include>
      <control type="group">
        <!--<animation effect="slide" end="0,30"  time="400" easing="inout" tween="cubic" condition="Skin.HasSetting(showcaseinfoon)+Container.Content(movies)|Skin.HasSetting(showcaseinfoontv)+Container.Content(tvshows)|!Skin.HasSetting(showcaseextrainfo)">Conditional</animation>-->
        <include>ShowcaseInfoPaneMovies</include>
      </control>
      <control type="group">
        <!--<animation effect="slide" end="0,30"  time="400" easing="inout" tween="cubic" condition="Skin.HasSetting(showcaseinfoon)+Container.Content(movies)|Skin.HasSetting(showcaseinfoontv)+Container.Content(tvshows)|!Skin.HasSetting(showcaseextrainfo)">Conditional</animation>-->
        <include>ShowcaseMoviesDVD</include>
      </control>
      <control type="wraplist" id="504">
        <visible>Container.Content(Movies) | Container.Content(Seasons) | Container.Content(TVShows) | Window.IsVisible(VideoFiles)| Window.IsActive(1)</visible>
        <visible>!Container.Content(LiveTV)</visible>
        <include condition="Window.IsActive(28) | Window.IsActive(24) | [Window.IsActive(25) + !Container.Content(episodes)] | Window.IsActive(1)">MovieShowcaseGroupVars</include>
        <onleft>504</onleft>
        <onright>504</onright>
        <onup>SetFocus(7000)</onup>
        <ondown>64</ondown>
        <viewtype label="$LOCALIZE[31151]">bigwrap</viewtype>
        <pagecontrol>64</pagecontrol>
        <scrolltime>200</scrolltime>
        <focusposition>3</focusposition>
        <orientation>horizontal</orientation>
        <preloaditems>4</preloaditems>
        <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(109)">Conditional</animation>
        <itemlayout height="350" width="196" condition="Window.IsActive(28) | Window.IsActive(24) | [Window.IsActive(25) + !Container.Content(episodes)] | Window.IsActive(1)">
          <control type="group">
            <visible>Skin.HasSetting(noflowdvd)+!Control.IsVisible(6004)</visible>
            <control type="image">
              <include>MovieShowcaseThumbMainDVD</include>
              <info>ListItem.Thumb</info>
            </control>
              <include>MovieShowcaseGlassOverlayAngledDVD</include>
            <control type="image">
              <include>MovieShowcaseThumbReflectionDVDCover</include>
              <info>ListItem.Thumb</info>
            </control>
              <include>MovieShowcaseThumbReflectionDVD</include>
             <control type="image">
              <include>WatchedOverlayShowCaseDVD</include>
              <visible>!IsEmpty(ListItem.Overlay)</visible>
              <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+!Skin.HasSetting(newstatus)</visible>
            </control>
            <control type="image">
              <include>NewOverlayShowCaseDVD</include>
              <visible>!IsEmpty(ListItem.Overlay)</visible>
              <visible>!StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(newstatus)</visible>
            </control>
          </control>
        </itemlayout>
        <focusedlayout height="350" width="196" condition="Window.IsActive(28) | Window.IsActive(24) | [Window.IsActive(25) + !Container.Content(episodes)] | Window.IsActive(1)">
          <control type="group">
            <visible>Skin.HasSetting(noflowdvd)+!Control.IsVisible(6004)</visible>
            <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="Control.HasFocus(7000) + Skin.HasSetting(noflowdvd)">Conditional</animation>
            <control type="image">
              <include>MovieShowcaseThumbMainDVD</include>
              <info>ListItem.Thumb</info>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(504) + Skin.HasSetting(noflowdvd)">Unfocus</animation>
            </control>
            <control type="group">
              <description>Glass overlay</description>
              <include>MovieShowcaseGlassOverlayAngledDVD</include>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(504) + Skin.HasSetting(noflowdvd)">Unfocus</animation>
            </control>
           <control type="image">
              <include>MovieShowcaseThumbReflectionMainDVD</include>
              <info>ListItem.Thumb</info>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(504) + Skin.HasSetting(noflowdvd)">Unfocus</animation>
            </control>
            <control type="group">
            <include>MovieShowcaseThumbReflectionDVD</include>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(504) + Skin.HasSetting(noflowdvd)">Unfocus</animation>
            </control>
            <control type="image">
              <include>WatchedOverlayShowCaseDVD</include>
              <visible>!IsEmpty(ListItem.Overlay)</visible>
              <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)+!Skin.HasSetting(newstatus)</visible>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(504) + Skin.HasSetting(noflowdvd)">Unfocus</animation>
            </control>
            <control type="image">
              <include>NewOverlayShowCaseDVD</include>
              <visible>!IsEmpty(ListItem.Overlay)</visible>
              <visible>!StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(newstatus)</visible>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(504) + Skin.HasSetting(noflowdvd)">Unfocus</animation>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="64">
        <posx>305</posx>
        <posy>670</posy>
        <width>670</width>
        <height>41</height>
        <visible allowhiddenfocus="true">Control.HasFocus(64)+Control.IsVisible(504)</visible>
        <texturesliderbackground border="14,0,14,0">views/scrollBarH.png</texturesliderbackground>
        <texturesliderbar border="14,0,14,0">views/scrollBarH_bar.png</texturesliderbar>
        <texturesliderbarfocus border="14,0,14,0">views/scrollBarH_bar_focus.png</texturesliderbarfocus>
        <textureslidernib>views/scrollBarNib.png</textureslidernib>
        <textureslidernibfocus>views/scrollBarNib.png</textureslidernibfocus>
        <pulseonselect>yes</pulseonselect>
        <onup>504</onup>
        <ondown>SetFocus(109)</ondown>
        <ondown>9000</ondown>
        <showonepage>false</showonepage>
        <orientation>horizontal</orientation>
      </control>
      <control type="group">
        <visible>!Control.HasFocus(109)</visible>

        <control type="label">
          <posx>340</posx>
          <posy>670</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_Info</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Year] • $INFO[ListItem.Duration] $LOCALIZE[12391] • $INFO[ListItem.RatingAndVotes][/UPPERCASE]</label>
          <visible>!Control.HasFocus(64)+!ControlGroup(9000).HasFocus+!IsEmpty(ListItem.Title)+Container.Content(movies)+!Skin.HasSetting(wallgenre)</visible>
        </control>

        <control type="label">
          <posx>340</posx>
          <posy>670</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_Info</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Genre][/UPPERCASE]</label>
          <visible>!Control.HasFocus(64)+!ControlGroup(9000).HasFocus+!IsEmpty(ListItem.Title)+Skin.HasSetting(wallgenre)</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>693</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_ShowcaseMainLabel2</font>
          <scroll>true</scroll>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
          <visible>!Control.HasFocus(64)+!ControlGroup(9000).HasFocus</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>693</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_ShowcaseMainLabel2</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[Container.NumItems] $LOCALIZE[31025] | $LOCALIZE[31024] $INFO[Container.CurrentPage]/$INFO[Container.NumPages][/UPPERCASE]</label>
          <visible>ControlGroup(9000).HasFocus</visible>
        </control>
      </control>
      <include>FloorFlags</include>
      <include>Furniture_DarkGradient</include>
    </control>
  </include>
</includes>