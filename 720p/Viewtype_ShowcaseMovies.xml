<includes>
  <include name="Showcase">
    <control type="group">
      <visible>Control.IsVisible(501)</visible>
      <control type="group">
        <include>ShowcaseMovies</include>
      </control>
      <control type="wraplist" id="501">
        <visible>[Container.Content(Movies) | Container.Content(Seasons) | Container.Content(TVShows) | Window.IsVisible(VideoFiles) | Window.IsActive(1)]+!stringcompare(Container.FolderPath,addons://sources/video/)</visible>
        <visible>!Container.Content(LiveTV)</visible>
        <include>MovieShowcaseGroupVars</include>
        <onleft>501</onleft>
        <onright>501</onright>
        <onup>SetFocus(7000)</onup>
        <ondown>61</ondown>
        <viewtype label="31028">bigwrap</viewtype>
        <pagecontrol>61</pagecontrol>
        <scrolltime>200</scrolltime>
        <focusposition>3</focusposition>
        <orientation>horizontal</orientation>
        <preloaditems>4</preloaditems>
        <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(109)">Conditional</animation>
        <itemlayout height="350" width="196">
          <control type="group">
            <visible>Skin.HasSetting(noflow)+!Control.IsVisible(6000)</visible>
            <control type="image">
              <include>MovieShowcaseThumb</include>
              <info>ListItem.Thumb</info>
            </control>
              <include>MovieShowcaseGlassOverlayAngled</include>
            <control type="image">
              <include>MovieShowcaseThumbReflection</include>
              <info>ListItem.Thumb</info>
            </control>
            <control type="image">
              <include>WatchedOverlayShowCase</include>
              <visible>!IsEmpty(ListItem.Overlay)</visible>
              <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
            </control>
            <control type="image">
              <include>NewOverlayShowCase</include>
              <visible>!StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(newstatus)+!IsEmpty(ListItem.Overlay)</visible>
            </control>
          </control>
        </itemlayout>
        <focusedlayout height="350" width="196">
          <control type="group">
            <visible>Skin.HasSetting(noflow)+!Control.IsVisible(6000)</visible>
            <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="Control.HasFocus(7000) + Skin.HasSetting(noflow)">Conditional</animation>
            <control type="image">
              <include>MovieShowcaseThumbMain</include>
              <info>ListItem.Thumb</info>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(501) + Skin.HasSetting(noflow)">Unfocus</animation>
            </control>
            <control type="group">
              <description>Glass overlay</description>
              <include>MovieShowcaseGlassOverlayAngled</include>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(501) + Skin.HasSetting(noflow)">Unfocus</animation>
            </control>
            <control type="image">
              <include>MovieShowcaseThumbReflectionMain</include>
              <info>ListItem.Thumb</info>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(501) + Skin.HasSetting(noflow)">Unfocus</animation>
            </control>
            <control type="image">
              <include>WatchedOverlayShowCase</include>
              <visible>!IsEmpty(ListItem.Overlay)</visible>
              <visible>StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(501) + Skin.HasSetting(noflow)">Unfocus</animation>
            </control>
            <control type="image">
              <include>NewOverlayShowCase</include>
              <visible>!StringCompare(ListItem.Overlay,OverlayWatched.png)+Skin.HasSetting(newstatus)+!IsEmpty(ListItem.Overlay)</visible>
              <animation effect="zoom" start="100" end="120" center="135,230" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
              <animation effect="zoom" start="120" end="100" center="135,230" time="400" easing="out" reversible="false" tween="cubic" condition="!Control.HasFocus(501) + Skin.HasSetting(noflow)">Unfocus</animation>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="61">
        <posx>305</posx>
        <posy>670</posy>
        <width>670</width>
        <height>41</height>
        <visible allowhiddenfocus="true">Control.IsVisible(501)+Control.HasFocus(61)</visible>
        <texturesliderbackground border="14,0,14,0">views/scrollBarH.png</texturesliderbackground>
        <texturesliderbar border="14,0,14,0">views/scrollBarH_bar.png</texturesliderbar>
        <texturesliderbarfocus border="14,0,14,0">views/scrollBarH_bar_focus.png</texturesliderbarfocus>
        <textureslidernib>views/scrollBarNib.png</textureslidernib>
        <textureslidernibfocus>views/scrollBarNib.png</textureslidernibfocus>
        <pulseonselect>yes</pulseonselect>
        <onup>501</onup>
        <ondown>SetFocus(109)</ondown>
        <ondown>9000</ondown>
        <showonepage>false</showonepage>
        <orientation>horizontal</orientation>
      </control>
      <control type="group">
        <visible>!Control.HasFocus(109)</visible>
        <include>Animation_HideMultiplex</include>
        <control type="label">
          <posx>340</posx>
          <posy>670</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_Info</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Year] • $INFO[ListItem.Duration] $LOCALIZE[12391] • $INFO[ListItem.RatingAndVotes][/UPPERCASE]</label>
          <visible>!Control.HasFocus(61)+!ControlGroup(9000).HasFocus+!IsEmpty(ListItem.Title)+Container.Content(movies)+!Skin.HasSetting(wallgenre)+!IsEmpty(ListItem.RatingAndVotes)</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>670</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_Info</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Year] • $INFO[ListItem.Duration] $LOCALIZE[12391][/UPPERCASE]</label>
          <visible>!Control.HasFocus(61)+!ControlGroup(9000).HasFocus+!IsEmpty(ListItem.Title)+Container.Content(movies)+!Skin.HasSetting(wallgenre)+IsEmpty(ListItem.RatingAndVotes)</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>670</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_Info</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Property(TotalEpisodes)] $LOCALIZE[20360] ($LOCALIZE[16101]: $INFO[ListItem.Property(UnWatchedEpisodes)])[/UPPERCASE]</label>
          <visible>!Control.HasFocus(60)+!ControlGroup(9000).HasFocus+!IsEmpty(ListItem.Title)+Container.Content(tvshows)+!Skin.HasSetting(wallgenre)|[Container.Content(seasons)+!IsEmpty(ListItem.Title)]</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>670</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_Info</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Genre][/UPPERCASE]</label>
          <visible>!Control.HasFocus(61)+!ControlGroup(9000).HasFocus+!IsEmpty(ListItem.Title)+Skin.HasSetting(wallgenre)</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>693</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_ShowcaseMainLabel2</font>
          <scroll>true</scroll>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
          <visible>!Control.HasFocus(61)+!ControlGroup(9000).HasFocus</visible>
        </control>
        <control type="label">
          <posx>340</posx>
          <posy>693</posy>
          <width>600</width>
          <align>center</align>
          <aligny>center</aligny>
          <include>Animation_CommonFade</include>
          <font>Font_ShowcaseMainLabel2</font>
          <textcolor>floor</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>[UPPERCASE]$INFO[Container.NumItems] $LOCALIZE[31025] | $LOCALIZE[31024] $INFO[Container.CurrentPage]/$INFO[Container.NumPages][/UPPERCASE]</label>
          <visible>ControlGroup(9000).HasFocus</visible>
        </control>
      </control>
    </control>
  </include>
</includes>